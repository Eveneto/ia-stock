# Environment Variables Example
# Copy this file to .env and adjust the values as needed

# Database Configuration
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=estoque_ia
MYSQL_USER=estoque_user
MYSQL_PASSWORD=estoque_password
DATABASE_HOST=db
DATABASE_PORT=3306

# Backend Configuration
BACKEND_PORT=8080
JWT_SECRET=your_jwt_secret_key_here
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# IA Microservice Configuration
IA_SERVICE_PORT=5000
MODEL_PATH=/app/model/modelo_reposicao.pkl

# External Database (if needed for production)
# DATABASE_URL=mysql://user:password@host:port/database

# Logging
LOG_LEVEL=INFO

# Development/Production Mode
ENVIRONMENT=development
DEBUG=true
